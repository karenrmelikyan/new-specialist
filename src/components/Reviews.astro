---
const { ENV, localization } = Astro.props
---

{localization === 'ru' 
    ? (
    <section class="reviews">
        <h2>Отзывы</h2>
        <div class="grid">
            {ENV.REVIEWS.map((review: { name: string; reviewBody: string }) => (
                <article class="card">
                    <h3>{review.name}</h3>
                    <div class="rating">
                        <div class="stars">
                            <span class="star filled">★★★★★</span>
                        </div>
                        <span class="value">5/5</span>
                    </div>
                    <p class="text">{review.reviewBody}</p>
                </article>
            ))}
        </div>
    </section>

    <section class="trust">
        <div class="trust-inner">
            <div class="trust-left">
                <h3>Реальные отзывы клиентов</h3>
                <p class="muted">Средняя оценка {ENV.RATING} на основе <a href={ENV.GOOGLE_REVIEWS_URL} target="_blank">{ENV.REVIEW_COUNT} отзывов</a></p>
                <div class="rating-large">{ENV.RATING} ★</div>
            </div>
        </div>
    </section>
    ) : (
        <section class="reviews">
            <h2>Կարծիքներ</h2>
            <div class="grid">
                {ENV.REVIEWS.map((review: { name: string; reviewBody: string }) => (
                    <article class="card">
                        <h3>{review.name}</h3>
                        <div class="rating">
                            <div class="stars">
                                <span class="star filled">★★★★★</span>
                            </div>
                            <span class="value">5/5</span>
                        </div>
                        <p class="text">{review.reviewBody}</p>
                    </article>
                ))}
            </div>
        </section>

        <section class="trust">
            <div class="trust-inner">
                <div class="trust-left">
                    <h3>Հաճախորդների իրական կարծիքներ</h3>
                    <p class="muted">Միջին գնահատական {ENV.RATING} հիմնված <a href={ENV.GOOGLE_REVIEWS_URL} target="_blank">{ENV.REVIEW_COUNT} կարծիքի վրա</a></p>
                    <div class="rating-large">{ENV.RATING} ★</div>
                </div>
            </div>
        </section>
    )
}

<style>
    .grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(290px, 1fr));
        gap: 32px;
    }

    .card {
        border: 2px solid var(--secondary-color);
        border-radius: 24px;
        padding: 24px;
        background: var(--main-background-color);
    }

    h3 {
        font-size: 22px;
        font-weight: 700;
        color: var(--main-font-color);
        margin: 0;
    }

    .rating {
        display: flex;
        align-items: center;
        gap: 8px;
        margin-bottom: 12px;
    }

    .stars {
        font-size: 18px;
        color: #ff3b3b;
    }

    .star {
        opacity: 0.3;
    }

    .star.filled {
        opacity: 1;
    }

    .value {
        font-size: 14px;
        color: var(--main-font-color);
    }

    .text {
        font-size: 16px;
        line-height: 1.45;
        color: var(--main-font-color);
        margin-bottom: 12px;
    }

    /* TRUST / REVIEWS */
    .trust {
        padding: 28px 0;
        background: linear-gradient(180deg,#f7fbff,#ffffff);
    }

    .trust-inner {
        display: flex;
        justify-content: space-between;
        gap: 20px;
        align-items: center;
    }

    .trust-left h3 { 
        margin: 0 0 6px; 
        font-size: 22px; 
        font-weight: var(--font-weight); 
        color: var(--main-font-color); 
    }

    .rating-large { 
        font-size: 36px; 
        color: #ffb703; 
        font-weight:  var(--font-weight); 
        margin-top: 8px; 
    }
</style>



