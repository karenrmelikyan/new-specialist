---
interface IssueItem {
  slug: string;
  title: string;
  sign?: string;
  causes?: string;
}

interface IssuesProps {
  title: string;
  subtitle?: string;
  btnText?: string;
  items: IssueItem[];
}

const { issues } = Astro.props as { issues: IssuesProps }
---

<section>
    <div class="content__container">
        <div class="content__left">
            <h2>{issues.title}</h2>
            <h3 class="subtitle">{issues.subtitle}</h3>
            <button class="btn-transparent" onclick="openModal()">
                {issues.btnText}
            </button>
        </div>

        <div class="content__grid">
            {issues.items.map(issue => (
                <a href={`${issue.slug}/`} class="content-card">
                    <h4>{issue.title}</h4>
                    <p>
                        <strong>Признак:</strong> {issue.sign}
                    </p>
                    {issue.causes && issue.causes.trim() !== '' && (
                        <p>
                            <strong>Причины:</strong> {issue.causes}
                        </p>
                    )}
                </a>
            ))}
        </div>
    </div>
</section>

<style>
    /* Base (mobile / tablet) */
    .content__container {
        display: flex;
        flex-direction: column;
        gap: 32px;
        max-width: 100%;
    }

    .content__left h2 {
        margin: 0 0 16px;
        font-size: var(--large);
        line-height: 1.2;
        font-weight: 700;
        color: var(--mani-font-color);
    }

    .subtitle {
        font-size: var(--middle);
        color: var(--mani-font-color);
        margin-bottom: 24px;
    }

    .content__grid {
        display: grid;
        grid-template-columns: 1fr;
        gap: 24px;
    }

    /* Card styles */
    .content-card {
        display: block;
        padding: 20px;
        background: var(--main-font-hover);
        border-radius: 24px;
        text-decoration: none;
        color: var(--mani-font-color);
        transition: transform 0.25s ease, box-shadow 0.25s ease;
    }

    .content-card h4 {
        font-size: var(--btn-large-font-size);
        font-weight: 700;
        line-height: 1.2;
        margin: 0 0 16px;
    }

    .content-card p {
        font-size: 16px;
        line-height: 1.45;
        margin: 0 0 10px;
    }

    .content-card strong {
        font-weight: 700;
    }
    
    @media (hover: hover) {
        .content-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 12px 24px rgba(0, 0, 0, 0.06);
        }
    }

    /* ✅ Desktop (≥1200px) */
    @media (min-width: 1200px) {
        .content__container {
            display: grid;
            grid-template-columns: 640px 1fr;
            align-items: start;
            gap: 48px;
        }

        .content__grid {
            grid-template-columns: repeat(2, 1fr);
        }
    }
</style>