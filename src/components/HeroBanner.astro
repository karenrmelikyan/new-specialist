<style>
    .hero {
        --hero-gutter: 2.5vw;
        position: relative;
        top: 10px;
        width: calc(100vw - (var(--hero-gutter) * 2));
        margin-left: calc(50% - 50vw + var(--hero-gutter));
        border-radius: var(--border-radius-huge);
        min-height: 800px;
        overflow: hidden;
    }

    /* background image */
    .hero-bg {
        position: absolute;
        inset: 0;
        background-size: cover;
        background-position: center right;
        filter: brightness(0.85);
    }

    /* content layer */
    .hero-content {
        max-width: var(--main-container-width);
        margin: 0 auto;
        padding: 48px 0;
        position: relative;
        z-index: 2;
    }

    /* title */
    .hero-title {
        margin: 0 0 52px;
        color: var(--main-background-color);
        font-size: var(--huge);
        font-weight: var(--font-weight);
    }

    /* floating panel */
    .hero-panel {
        max-width: 750px;
        background: var(--main-font-color);
        border-radius: var(--border-radius-huge);
        padding: 32px 32px 60px;
        color: var(--main-background-color);
        box-shadow: 0 24px 60px rgba(0, 0, 0, 0.35);
    }

    /* list */
    .hero-list {
        margin: 0 0 24px;
        padding-left: 26px;
        padding-top: 26px;
        font-size: var(--small);
        line-height: 1.3;
    }

    .hero-list li {
        margin-bottom: 8px;
    }

    /* price */
    .hero-price {
        font-size: var(--middle);
        margin-bottom: 55px;
        margin-left: 10px;
    }

    .hero-price .label {
        font-weight: 800;
    }

    .hero-price .value {
        color: #a8b2ff;
        font-weight: 700;
    }

    .hero-time {
        font-size: var(--small);
        opacity: 0.9;
        display: flex;
        align-items: center;
        gap: 6px;
    }

    /* actions row */
    .hero-actions {
        display: flex;
        align-items: center;
        gap: 20px;
        flex-wrap: wrap;
    }

