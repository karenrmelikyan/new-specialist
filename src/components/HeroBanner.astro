<style>
    .hero {
        --hero-gutter: 2.5vw;
        position: relative;
        top: 70px;
        width: calc(100vw - (var(--hero-gutter) * 2));
        margin-left: calc(50% - 50vw + var(--hero-gutter));
        border-radius: var(--border-radius-huge);
        min-height: 800px;
        overflow: hidden;
    }

    /* background image */
    .hero-bg {
        position: absolute;
        inset: 0;
        background: center right / cover no-repeat;
        filter: brightness(0.85);
    }

    .hero-bg-img {
        position: absolute;
        inset: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        object-position: right;
        filter: brightness(0.85);
    }

    /* content wrapper */
    .hero-content {
        position: relative;
        z-index: 2;

        max-width: var(--main-container-width);
        margin: 0 auto;
        padding: 20px 0 48px;
    }

    /* titles (shared) */
    .hero-title,
    .hero-title-mobile {
        color: var(--main-background-color);
        font-weight: var(--font-weight);
        line-height: 1.2;
    }

    /* desktop title */
    .hero-title {
        margin: 40px 40px 52px;
        font-size: var(--huge);
    }

    /* mobile title */
    .hero-title-mobile {
        font-size: var(--large);
    }

    /* floating panel */
    .hero-panel {
        max-width: 750px;
        margin-left: 40px;

        padding: 32px 32px 60px;
        background: var(--main-font-color);
        color: var(--main-background-color);
        
        border-radius: var(--border-radius-huge);
        box-shadow: 0 24px 60px rgba(0, 0, 0, 0.35);
    }

    /* list */
    .hero-list {
        margin-bottom: 24px;
        padding: 26px 0 0 26px;

        font-size: var(--small);
        line-height: 1.3;
    }

    .hero-list li {
        margin-bottom: 8px;
    }

    /* price */
    .hero-price {
        margin: 0 0 55px 10px;
        font-size: var(--middle);
    }

    .hero-price .label {
        font-weight: 800;
    }

    .hero-price .value {
        color: #a8b2ff;
        font-weight: 700;
    }

    /* time */
    .hero-time {
        display: flex;
        align-items: center;
        gap: 6px;

        font-size: var(--small);
        opacity: 0.9;
    }

    /* actions */
    .hero-actions {
        display: flex;
        align-items: center;
        flex-wrap: wrap;
        gap: 20px;
    }

    /* =====================
    TABLET & BELOW
    ===================== */

    @media (max-width: 1200px) {
        .hero {
            display: flex;
            flex-direction: column;
            justify-content: flex-end;
            min-height: auto;
        }

        .hero-bg {
            position: relative;
            height: 45vh;
            min-height: 260px;
            max-height: 420px;
            background-position: center;
        }

        .hero-content {
            max-width: 100%;
            padding: 0;
            margin: 0;
        }

        .hero-title {
            display: none;
        }

        .hero-panel {
            max-width: 100%;
            margin: -50px 0 0;
            padding: 24px 24px 32px;
            border-radius: var(--border-radius-small);
            box-shadow: none;
        }

        .hero-title-mobile {
            margin-bottom: 16px;
        }
    }

    /* =====================
    MOBILE
    ===================== */
    
    @media (max-width: 768px) {
        .hero {
            top: 60px;
            border-radius: var(--border-radius-small);
        }
        
        .hero-title-mobile {
            margin: 0;
            font-size: 35px;
        }

        .hero-list {
            padding-left: 18px;
        }

        .hero-price {
            font-size: 25px;
        }
    }
</style>

