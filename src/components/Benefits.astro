---
const content = 
{
    "title": "Наши преимущества",
    "items": [
        {
            "h": "Профессиональные мастера",
            "p": "Сертифицированные инженеры, опыт от 10 лет."
        },
        {
            "h": "Оригинальные запчасти",
            "p": "Склады и быстрая доставка по Еревану."
        },
        {
            "h": "Гарантия",
            "p": "Официальная гарантия до 12 месяцев."
        },
        {
            "h": "Удобная оплата",
            "p": "Нал, карта, оплатa через сайт."
        },
        {
            "h": "Быстрый выезд",
            "p": "Мастер приезжает в день обращения или по удобному времени."
        },
        {
            "h": "Диагностика на дому",
            "p": "Без вывоза техники, экономия времени и удобство для клиента."
        },
        {
            "h": "Честная смета",
            "p": "Фиксированные цены без скрытых доплат и навязывания услуг."
        },
        {
            "h": "Прозрачные сроки",
            "p": "Сразу сообщаем, сколько займёт ремонт и когда будет готово."
        }
    ]
}
---

<section class="benefits">
    <h2>{content.title}</h2>
    <div class="benefits-grid">
        {content.items.map((item: { h: string; p: string }, index: number) => (
            <div class="benefit">
                <div class="big-num">0{index + 1}</div>
                <h4>{item.h}</h4>
                <p>{item.p}</p>
            </div>
        ))}
    </div>
</section>

<style>
    .benefits-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 20px;
    }
    .benefit {
        background: var(--main-background-color);
        border-radius: 12px;
        padding: 18px;
        border: 1px solid #eef5fb;
        box-shadow: 0 8px 20px rgba(11,59,130,0.03);
    }
    .big-num {
        font-size: 34px;
        font-weight: var(--font-weight);
        color: var(--main-font-color);
        opacity: 0.14;
        margin-bottom: 8px;
    }
</style>