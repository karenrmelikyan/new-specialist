---
const { content } = Astro.props
---

<style>
    .benefits-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 18px;
        margin-bottom: 10px;
    }
    .benefit {
        background: var(--main-background-color);
        border-radius: 12px;
        padding: 18px;
        border: 1px solid #eef5fb;
        box-shadow: 0 8px 20px rgba(11,59,130,0.03);
    }
    .big-num {
        font-size: 34px;
        font-weight: var(--font-weight);
        color: var(--main-font-color);
        opacity: 0.14;
        margin-bottom: 8px;
    }
</style>

<section class="benefits">
    <h2>Наши преимущества</h2>
    <div class="benefits-grid">
        {content.items.map((item: { h: string; p: string }, index: number) => (
            <div class="benefit">
                <div class="big-num">0{index + 1}</div>
                <h4>{item.h}</h4>
                <p>{item.p}</p>
            </div>
        ))}
    </div>
</section>