<button id="scrollUpBtn" class="btn-scroll-up">
    <span></span>
</button>

<script>
    const scrollBtn = document.getElementById('scrollUpBtn') as HTMLElement

    window.addEventListener('scroll', () => {
        if (window.scrollY > 500) {
            scrollBtn.classList.add('visible')
        } else {
            scrollBtn.classList.remove('visible')
        }
    })

    scrollBtn.addEventListener('click', () => {
        window.scrollTo({
            top: 0,
            behavior: 'smooth'
        })
    })
</script>

<style>
    .btn-scroll-up {
        position: fixed;
        right: 30px;
        bottom: 30px;
        width: 70px;
        height: 70px;
        border-radius: 50%;
        border: 2px solid var(--main-font-color);
        background: var(--main-background-color);
        display: flex;
        justify-content: center;
        align-items: center;
        cursor: pointer;

        /* visibility control */
        opacity: 0;
        visibility: hidden;
        pointer-events: none;
        transform: translateY(20px);

        transition:
            opacity 0.3s ease,
            visibility 0.3s ease,
            transform 0.3s ease;

        z-index: 999;
    }

    .btn-scroll-up span {
        display: block;
        width: 18px;
        height: 18px;
        border-right: 2px solid var(--main-font-color);
        border-bottom: 2px solid var(--main-font-color);
        transform: rotate(-135deg) translateY(-3px) translateX(-3px);
    }

    /* visible state */
    .btn-scroll-up.visible {
        opacity: 1;
        visibility: visible;
        pointer-events: auto;
        transform: translateY(0);
    }

    /* hover only on devices that really support hover */
    @media (hover: hover) and (pointer: fine) {
        .btn-scroll-up:hover {
            opacity: 0.5;
        }
    }

    /* =====================
    TABLET & BELOW
    ===================== */
    @media (max-width: 1200px) {
        .btn-scroll-up {
            right: 20px;
            bottom: 90px;
        }
    }

    /* =====================
    MOBILE
    ===================== */
    @media (max-width: 768px) {
        .btn-scroll-up {
            right: 20px;
            bottom: 80px;
            width: 60px;
            height: 60px;
        }
    }
</style>